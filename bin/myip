#!/usr/bin/env sh

EXEPATH="$0"
EXE="$(basename "$EXEPATH")"

_usage () {
  if [ "$1" "$2" "$3" ] ; then
    >&2 echo "usage: $EXE $4"
    exit 2
  fi
}

_usage "$#" -lt 1 "<scope>"

scope="$1" && shift

_route () {

  case "$scope" in
      public)
	  _public "$@"
	  ;;
      private)
	  _private "$@"
	  ;;
      *)
	  _unknown_scope "$scope"
	  ;;
  esac

}

_public () {
  _usage "$#" -ne 0 "public"
  dig +short myip.opendns.com @resolver1.opendns.com
  exit "$?"
}

_private () {
  _usage "$#" -ne 0 "private"
  ip address | grep 'inet ' | grep 'scope global' | grep '[0-9]\{1,3\}\.[0-9]\{1,3\}\.[0-9]\{1,3\}\.[0-9]\{1,3\}' -o | head -1
  exit "$?"
}

_unknown_scope () {
  >&2 echo "Unknown scope: $1"
  exit 3
}

_route "$@"
